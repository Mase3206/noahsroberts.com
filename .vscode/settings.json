{
	/*  -------------
	   Global settings 
	    -------------  */

	// Tabs
	"editor.tabSize": 4,
	"editor.useTabStops": true,
	"editor.insertSpaces": false,
	"diffEditor.ignoreTrimWhitespace": false,

	// Sass
	"liveSassCompile.settings.includeItems": [
		"/static/sass/style.sass"
	],


	/*  ---------------------
	   File-specific overrides 
	    ---------------------  */
	
	// File associations
	"files.associations": {
		"**/dist/**/*.html": "html",
		"**/templates/_original/**/*.html": "jinja-html",
		"**/templates/**/*.svelte": "svelte",
		"**/templates/**/*.svelte.js": "javascript",
		"**/templates/**/*.svelte.ts": "typescript",
		"src/lib/css/main.css": "tailwindcss",
	},

	// HTML Templates
	"[jinja-html]": {
		"editor.tabSize": 2,
	},
	"[svelte]": {
		"editor.tabSize": 2,
	},

	// YAML
	"[yaml]": {
		"editor.tabSize": 2,
		"editor.useTabStops": false,
		"editor.insertSpaces": true,
		"editor.autoIndent": "keep",
		"editor.defaultColorDecorators": "never",
		"editor.quickSuggestions": {
			"other": true,
			"comments": false,
			"strings": true,
		}
	},

}
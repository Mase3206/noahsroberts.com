{
	"name": "scssg",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run sass:watch & vite dev",
		"build": "npm run sass && vite build",
		
		"sass": "sass --no-source-map src/lib/css/prism.sass src/lib/css/prism.css",
		"sass:watch": "sass --watch --update --no-source-map src/lib/css/prism.sass src/lib/css/prism.css",

		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@lucide/svelte": "^0.487.0",
		"@sveltejs/adapter-cloudflare": "^7.0.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.1.3",
		"mdsvex": "^0.12.3",
		"rehype-callouts": "^2.0.2",
		"sass": "^1.86.3",
		"sass-embedded": "^1.86.1",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.3",
		"typescript": "^5.0.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
	}
}
